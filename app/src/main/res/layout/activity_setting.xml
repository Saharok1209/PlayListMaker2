<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="22dp"
    android:paddingLeft="17dp"
    android:paddingRight="15dp"
    tools:context=".SettingActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/icon_padding"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icon_padding"
            android:padding="@dimen/icon_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back"
            android:id="@+id/arrow_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="28dp"
            android:padding="@dimen/icon_padding"
            android:text="Настройки"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            />
    </FrameLayout>
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:text="Тёмная тема "
        android:textSize="@dimen/text_size_setting"
        app:showText="true"
        android:paddingTop="@dimen/setting_padding"
        android:paddingBottom="@dimen/setting_padding"
        android:layout_marginTop="40dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/setting_padding"
        android:paddingBottom="@dimen/setting_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поделиться приложением"
            android:textSize="@dimen/text_size_setting"
            android:textColor="@color/black"
            android:id="@+id/shareAction"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_gravity="end"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/setting_padding"
        android:paddingBottom="@dimen/setting_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать в поддержку"
            android:textSize="@dimen/text_size_setting"
            android:textColor="@color/black"
            android:id="@+id/supportWrite"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_support"
            android:layout_gravity="end"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/setting_padding"
        android:paddingBottom="@dimen/setting_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пользовательское соглашение"
            android:textSize="@dimen/text_size_setting"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_gov"
            android:layout_gravity="end"/>
    </FrameLayout>

</LinearLayout>